def fact(): 
  vergili=int(input("Ne ödedin?"+"\n"))
  vergili=vergili*100
  kdv=int(input("KDV ne?"+"\n"))
  kdv=kdv+100
  vergisiz=vergili/kdv
  vergili=vergili/100
  vergi=vergili-vergisiz
  vergi=round(vergi,2)
  return vergi
print("Ödediğiniz vergi:",fact())
